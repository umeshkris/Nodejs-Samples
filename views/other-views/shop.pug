extends layouts/main-layout.pug

block styles
        link(rel="stylesheet", href="/css/product.css")
        

block content
     main
             if prods.length>0
                     .grid
                     each products in prods
                         article.card.product-item
                                 header.card__header
                                     h1.product__title #{products.title}
                                 .card__image
                                     img(src="https://www.netclipart.com/pp/m/7-76504_children-reading-bookscartoongoogle-boy-and-girl-reading-book.png", alt="A Book" ,height="300px",width="300px;")
                                 .card__content
                                     h2.product__price $19.99
                                     p.product__description A very interesting book about so many even more interesting things!
                                 .card__actions
                                     button.btn Add to Cart
             else
             h1 No products !!


















