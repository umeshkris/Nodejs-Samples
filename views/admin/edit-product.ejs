<%- include('../includes/header.ejs')%>
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/product.css">

</head>

<body>
    <%- include('../includes/navigation.ejs')%>

    <main>
<%
    if(errorMessage) { %>

        <div class="error-msg">
            
            <%=errorMessage%>


        </div>


    <%} %>


        <form class="product-form" action="/admin/<%if(editable) {%>edit-product <%}else {%>add-products <%}%>" method="POST">
            <div class="form-control">
                <label for="title"> Title</label>
                <input type="text" name="title" id="title" value="<%if(editable) {%> <%=product.title%> <%}%>"> 

            </div>

            <div class="form-control">
                <label for="imageUrl"> imageUrl</label>
                <input type="text" name="imageurl" id="imageurl" value="<%if(editable) {%> <%=product.imageurl%> <%}%>"> 

            </div>

            <div class="form-control">
                <label for="price"> Price</label>
                <input type="text" name="price" id="price" value="<%if(editable) {%> <%=product.price%> <%}%>"> 

            </div>

            <div class="form-control">
                <label for="description"> Description</label>
                <textarea name="description" id="description" rows="5"> <%if(editable) {%> <%=product.description%> <%}%></textarea>

            </div>

            <% if(editable) {%>
                    <input type="hidden" name="productId" value="<%=product._id%>">
            
                <%}%>
            <button type="submit"> <%if(editable) {%>Update Product <%} else {%> Add Product <% }%></button>
        </form>
    </main>
</body>

</html>